<toolSet name="External Tools">
  <tool name="Stylelint Fix Samolet" description="Fix file with stylelint." showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="npm" />
      <option name="PARAMETERS" value="run lint:scss -- ../$FilePathRelativeToProjectRoot$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/app" />
    </exec>
  </tool>
  <tool name="Compile SCSS" description="Compile SCSS file into CSS to current directory" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="sass" />
      <option name="PARAMETERS" value="$FileName$ $FileNameWithoutAllExtensions$.css" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>