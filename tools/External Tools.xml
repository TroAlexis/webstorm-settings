<toolSet name="External Tools">
  <tool name="Stylelint.Fix" description="Fix current file with stylelint." showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="cd `find . -maxdepth 2 -type d -name '*node*' -print -quit` &amp;&amp; cd .. &amp;&amp; npx" />
      <option name="PARAMETERS" value="stylelint --fix &quot;$FilePathRelativeToProjectRoot$&quot;" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="Compile SCSS" description="Compile SCSS file into CSS to current directory" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="sass" />
      <option name="PARAMETERS" value="$FileName$ $FileNameWithoutAllExtensions$.css" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>